
<h4 class="header-title">Create Form</h4>
<p class="card-title-desc">
</p>

<form action="/admin/articles/add" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="form-group">
        <label for="title" class="col-form-label">Title</label>
        <div class="col-md-12">
            <% if (typeof errors !== 'undefined') { %>
            <% errors.forEach( (error) => { %>
            <% if (error.param === 'title') { %>
            <input type="text" class="form-control is-invalid" value="<%= error.value %>" name="title" id="title"
                placeholder="Enter title" required>
            <div class="invalid-feedback">
                <%= error.msg %>
            </div>
            <% } %>
            <% }) %>
            <% } %>

            <% if (typeof validInput !== 'undefined' && typeof validInput.title !== 'undefined') { %>
            <input type="text" class="form-control is-valid" name="title" id="title" value="<%= validInput.title %>"
                placeholder="Enter title" required>
            <% } %>

            <% if (typeof errors === 'undefined' && typeof validInput === 'undefined') { %>
            <input type="text" class="form-control" name="title" id="title" placeholder="Enter title" required>
            <% } %>
        </div>
    </div>

    <div class="form-group">
        <label for="summary" class="col-form-label">Summary</label>
        <div class="col-md-12">
            <textarea id="summary" name="summary" class="form-control" maxlength="225" rows="3"
                placeholder="Summary of the article."></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label for="thumbnail_img" class="col-md-2 col-form-label">Thumbnail</label>
        <div class="col-md-3">
            <input name="thumbnail_img" type="file" multiple="multiple">
        </div>
    </div>


    <div class="form-group row">
        <label class="col-md-2 col-form-label">Category</label>
        <div class="col-md-5">
            <select class="custom-select" name="category">
                <option selected="">Choose a category</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-form-label mb-2">Body</label>
        <div class="col-md-12">
            <!-- <div class="summernote"> -->
            <textarea class="summernote" name="body" id="body" cols="30" rows="10"></textarea>
            <!-- </div> -->
        </div>
    </div>

    <div class="form-group m-3 custom-control custom-checkbox ">
        <input type="checkbox" class="custom-control-input" id="publishCheck" checked="" name="publishCheck">
        <label class="custom-control-label" for="publishCheck">Publish right after
            creating the
            article.</label>
    </div>

    <div class="form-group mb-0">
        <div class="col-lg-12">
            <div class="text-right">
                <a type="button" href="/articles" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">CREATE</button>
            </div>
        </div>
    </div>
</form>