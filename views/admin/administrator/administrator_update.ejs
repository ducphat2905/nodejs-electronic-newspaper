                                                                    <label  class="btn btn-success active">
                                                                    <input type="radio" name="options" id="activated_status_btn" checked="" value="<%= admin.status %>" disabled><i class="mdi mdi-check-circle"></i> <%= admin.status %>
                                                                    </label>
                                                                <% }else if(admin.status === 'Deactivated') { %>
