                                                            <input type="hidden" name="id" value="<%= admin.id %>">
                                                            <button class="btn btn-danger text-light sa-warning-delete" type="button" role="button" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete">
                                                                <i class="mdi mdi-delete-alert"></i>
                                                            </button>
                                                        </form>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
