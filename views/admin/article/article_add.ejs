<!DOCTYPE html>
<html lang="en">
  <head>

    <%- include('./article_head.ejs') %>
    <!-- Summernote css -->
    <link href="/admin/static/assets/libs/summernote/summernote-bs4.css" rel="stylesheet" type="text/css" />
    
    <!-- Additional -->
    <link href="/admin/static/assets/libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">
  </head>

    <body data-sidebar="dark">

        <!-- Begin page -->
        <div id="layout-wrapper">

          <%- include('../base/topbar') %>

            <!-- ========== Left Sidebar Start ========== -->
            <div class="vertical-menu">

                <div data-simplebar class="h-100">

                    <%- include('../base/left-sidebar') %>
                </div>
            </div>
            <!-- Left Sidebar End -->

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">
                                        <a href="/admin/administrators" class="btn btn-dark">
                                            <i class="mdi mdi-keyboard-backspace"></i>
                                        </a>
                                    </h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Account</a></li>
                                            <li class="breadcrumb-item"><a href="/admin/administrators">Administrators</a></li>
                                            <li class="breadcrumb-item active">Add</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title -->
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <% if(messages.addSuccess) { %>
                                            <div class="alert alert-success" role="alert">
                                                <%= messages.addSuccess %> 
                                            </div>
                                        <% } else if (messages.addFail) { %>
                                            <div class="alert alert-danger" role="alert">
                                                <%= messages.addFail %> 
                                            </div>
                                        <% } %> 
                                        
                                        <h4 class="header-title">Create Form</h4>
                                        <p class="card-title-desc">Submit the <code>Create</code> button to add a new administrator.</p>
                                            <form action="/admin/articles/add"  method="POST" class="needs-validation" novalidate enctype="multipart/form-data" >
                                            <div class="form-group">
                                                <label for="title" class="col-form-label">Title</label>
                                                <div class="col-md-12">
                                                    <% if (typeof errors !== 'undefined') { %>
                                                        <% errors.forEach( (error) => { %>
                                                            <% if (error.param === 'title') { %> 
                                                                <input type="text" class="form-control is-invalid" value="<%= error.value %>" name="title" id="title" placeholder="Enter title" required>
                                                                <div class="invalid-feedback">
                                                                    <%= error.msg %>
                                                                </div>
                                                            <% } %> 
                                                        <% }) %>
                                                    <% } %> 

                                                    <% if (typeof validInput !== 'undefined' && typeof validInput.title !== 'undefined') { %>
                                                        <input type="text" class="form-control is-valid" name="title" id="title" value="<%= validInput.title %>" placeholder="Enter title" required>
                                                    <% } %> 

                                                    <% if (typeof errors === 'undefined' && typeof validInput === 'undefined') { %> 
                                                        <input type="text" class="form-control" name="title" id="title"  placeholder="Enter title" required>
                                                    <% } %> 
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="summary" class="col-form-label">Summary</label>
                                                <div class="col-md-12">
                                                    <textarea id="summary" name="summary" class="form-control" maxlength="225" rows="3" placeholder="Summary of the article."></textarea>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label for="thumbnail_img" class="col-md-2 col-form-label">Thumbnail</label>
                                                <div class="col-md-3">
                                                    <input name="thumbnail_img" type="file" multiple="multiple">
                                                </div>
                                            </div>


                                            <div class="form-group row">
                                                <label class="col-md-2 col-form-label">Category</label>
                                                <div class="col-md-5">
                                                    <select class="custom-select" name="category">
                                                        <option selected="">Choose a category</option>
                                            <% if (categories) { %> 
                                                <% categories.forEach( (category) => { %>
                                                    <option value="<%= category.id %>">
                                                        <%= category.name %>
                                                    </option>
                                                <% }) %> 
                                            <% } else { %>
                                                    
                                            <% } %> 
                                                </select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-form-label mb-2">Body</label>
                                                <div class="col-md-12">
                                                    <!-- <div class="summernote"> -->
                                                        <textarea class="summernote" name="body" id="body" cols="30" rows="10"></textarea>
                                                    <!-- </div> -->
                                                </div>
                                            </div>

                                            <div class="custom-control custom-checkbox form-group mb-2">
                                                <input type="checkbox" class="custom-control-input" id="publishCheck" checked="" name="publishCheck">
                                                <label class="custom-control-label" for="publishCheck">Publish after creating the article.</label>
                                            </div>

                                            <div class="row mb-0">
                                                <div class="col-lg-12">
                                                    <div class="text-right">
                                                        <button type="submit" class="btn btn-primary">CREATE</button> 
                                                    </div>
                                                </div>
                                            </div>
                                    </form>
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                        
                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                
        <!-- footer -->
        <%- include('../base/footer') %>
        <!-- end footer -->
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->

        <!-- Right Sidebar -->
        <%- include('../base/right-sidebar') %>
        <!-- /Right-bar -->

    <!-- script -->
    <%- include('../base/js') %>
    <script src="/admin/static/assets/libs/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="/admin/static/assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/admin/static/assets/libs/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
    <script src="/admin/static/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    
    <!-- form advanced init -->
    <script src="/admin/static/assets/js/pages/form-advanced.init.js"></script>
    <script src="/admin/static/assets/libs/parsleyjs/parsley.min.js"></script>
    <script src="/admin/static/assets/js/pages/form-validation.init.js"></script>
    <!-- Summernote js -->
    <script src="/admin/static/assets/libs/summernote/summernote-bs4.min.js"></script>

    <!-- init js -->
    <script src="/admin/static/assets/js/pages/summernote.init.js"></script>
  </body>
</html>
